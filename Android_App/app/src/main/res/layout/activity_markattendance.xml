<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greybg"
    tools:context=".Markattendance">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="#ADDAA3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="MARK ATTENDANCE">
    </TextView>

    <TextView
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course    :"
        android:layout_below="@id/text1"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/course" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/text1"
        android:layout_toRightOf="@id/course"
        android:id="@+id/Coursespinner"
        android:layout_marginTop="20dp">
    </Spinner>


    <TextView
        android:id="@+id/sem"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:text="Semester:"
        android:textSize="20sp"
        android:layout_below="@id/course"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_below="@id/course"
        android:layout_toRightOf="@id/sem"
        android:layout_marginLeft="10dp"
        android:id="@+id/semspinner"
        android:layout_marginTop="15dp">
    </Spinner>

    <TextView
        android:id="@+id/sec"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:text="Section:"
        android:textSize="20sp"
        android:layout_below="@id/sem"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_below="@id/sem"
        android:layout_toRightOf="@id/sec"
        android:layout_marginLeft="10dp"
        android:id="@+id/secspinner"
        android:layout_marginTop="15dp">
    </Spinner>

    <TextView
        android:id="@+id/subject"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:text="Subject    :"
        android:textSize="20sp"
        android:layout_below="@id/sec"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_below="@id/sec"
        android:layout_toRightOf="@id/sem"
        android:layout_marginLeft="10dp"
        android:id="@+id/subjectspinner"
        android:layout_marginTop="15dp">
    </Spinner>

    <TextView
        android:id="@+id/selectDate"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:text="Select Date    :"
        android:textSize="20sp"
        android:layout_below="@id/subjectspinner"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/selectDate"
        android:layout_below="@id/subjectspinner"
        android:id="@+id/datepick"/>

    <Button
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#BAB5E8"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="mark attendance"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/selectDate"/>

</RelativeLayout>