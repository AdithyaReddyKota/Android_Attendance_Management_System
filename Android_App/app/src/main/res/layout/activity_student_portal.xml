<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentPortal">

  <TextView
      android:id="@+id/text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:textStyle="bold"
      android:background="#ADDAA3"
      android:layout_marginStart="20dp"
      android:layout_marginTop="45dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="10dp"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:text="View Attendence">
  </TextView>


  <EditText
      android:id="@+id/getRegno"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/text1"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:hint="Reg.No."
      android:textColor="@color/black" />



  <TextView
      style="?android:textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Course    :"
      android:layout_below="@id/getRegno"
      android:textSize="20sp"
      android:layout_marginLeft="30dp"
      android:layout_marginBottom="10dp"
      android:textStyle="bold"
      android:layout_marginTop="20dp"
      android:id="@+id/course" />
  <Spinner
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:spinnerMode="dialog"
      android:layout_marginLeft="10dp"
      android:layout_marginBottom="10dp"
      android:layout_below="@id/getRegno"
      android:layout_toRightOf="@id/course"
      android:id="@+id/Cource_Spinner"
      android:layout_marginTop="20dp">
  </Spinner>


  <TextView
      android:id="@+id/sem"
      style="?android:textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginBottom="10dp"
      android:text="Semester:"
      android:textSize="20sp"
      android:layout_below="@id/course"
      android:textStyle="bold"
      android:layout_marginTop="15dp"
      />
  <Spinner
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:spinnerMode="dialog"
      android:layout_below="@id/course"
      android:layout_toRightOf="@id/sem"
      android:layout_marginLeft="10dp"
      android:id="@+id/semester_spinner"
      android:layout_marginTop="15dp">
  </Spinner>

  <TextView
      android:id="@+id/subject"
      style="?android:textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
      android:layout_marginBottom="10dp"
      android:text="Subject    :"
      android:textSize="20sp"
      android:layout_below="@id/sem"
      android:textStyle="bold"
      android:layout_marginTop="15dp"
      />
  <Spinner
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:spinnerMode="dialog"
      android:layout_below="@id/sem"
      android:layout_toRightOf="@id/sem"
      android:layout_marginLeft="10dp"
      android:id="@+id/subject_spinner"
      android:layout_marginTop="15dp">
  </Spinner>


  <Button
      android:id="@+id/getAttendenceButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/subject"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="40dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="40dp"
      android:layout_marginBottom="40dp"
      android:backgroundTint="#BAB5E8"
      android:text="View Report"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold" />

  </RelativeLayout>